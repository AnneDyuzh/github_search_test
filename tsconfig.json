{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": false,
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        "plugins": [
            {
                "name": "typescript-plugin-styled-components"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@entities/*": [
                "src/entities/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@features/*": [
                "src/features/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@app/*": [
                "src/app/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@widgets/*": [
                "src/widgets/*"
            ]
        }
    },
    "include": [
        "src/*",
    ]
}